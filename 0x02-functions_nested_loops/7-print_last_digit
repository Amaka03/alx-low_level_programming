#include "main.h"

/**
* print_last_digit - will print the last digit of a number
* @i: the number that will be used to find the last digit
* Return: the value of the last digit
*/
int print_last_digit(int i)
{
	int a;

	if (i < 0)
	i = -i;

	a = i % 10;

	if (a < 0)
		a = -a;

	_putchar(a + '0');

	return (a);
}

